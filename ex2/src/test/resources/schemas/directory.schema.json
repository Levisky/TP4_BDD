{
  "$id": "http://masterinfo.univ-lr.fr/bda/fs/directory.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    {
      "$ref": "node.schema.json" 
    },
    {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "file.schema.json" }, 
              { "$ref": "directory.schema.json" } 
            ]
          },
          "minItems": 0
        }
      },
      "required": ["nodes"],
      "additionalProperties": false 
    }
  ]
}
